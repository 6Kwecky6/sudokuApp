<?xml version="1.0" encoding="utf-8"?>
<!--Using androidx-->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="@string/header_settings">
    <PreferenceCategory
        android:id="@+id/lanaguageCatagory"
        android:title="@string/header_settings"
        app:key="language_category">

        <ListPreference
            android:id="@+id/languageSelection"
            android:layout_width="match_parent"
            android:entries="@array/languages"
            android:entryValues="@array/languages"
            android:key="preference_language"
            android:title="@string/listPreference_language_selection" />
    </PreferenceCategory>
</PreferenceScreen>